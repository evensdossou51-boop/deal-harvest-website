# Email Configuration
EMAIL_USER=your-gmail@gmail.com
EMAIL_PASS=your-app-password

# Amazon Product Advertising API Configuration
# Get these credentials from your Amazon Associates account and AWS console

# Amazon Associate Program
AMAZON_ASSOCIATE_TAG=your-associate-tag-20

# AWS Credentials (from AWS Console -> IAM -> Users)
AMAZON_ACCESS_KEY_ID=your-access-key-here
AMAZON_SECRET_ACCESS_KEY=your-secret-key-here

# API Configuration  
AMAZON_REGION=us-east-1
AMAZON_HOST=webservices.amazon.com
PORT=5001

# Scheduler Settings
FETCH_INTERVAL_HOURS=1
MAX_PRODUCTS=50
ENABLE_AUTO_FETCH=true

# Development
NODE_ENV=development